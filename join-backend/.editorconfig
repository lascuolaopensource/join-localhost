root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{scala,sbt,conf}]
indent_size = 2
indent_style = space

[*.{html,xml}]
indent_size = 4
indent_style = tab

[*.md]
# Preserve trailing whitespace for Markdown files
trim_trailing_whitespace = false
